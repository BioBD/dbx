private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        String text1 = textAreaSqlOriginal.getText();
        
        text1 = text1.trim();
        if(!text1.endsWith(";"))
            text1 += ";";
        textAreaSqlReescrita.setText("");
        //labelResultado.setText("");
        String result;
        try {
            result = rw.analyseStatement(text1);
            if(rw.isRewrited()){
                String text2 = "A SQL foi reescrita. Número de reescritas realizadas: " + rw.getCount();
                labelResultado.setText(text2);
                result = Indenter.ident(result);
                textAreaSqlReescrita.setText(result);
                
            }else{
                String text2 = "Não foi encontrada reescrita para a SQL.";
                labelResultado.setText(text2);
            }
        } catch (ParseException ex) {
            Logger.getLogger(Wizard.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SqlInputException ex) {
            Logger.getLogger(Wizard.class.getName()).log(Level.SEVERE, null, ex);
        }
        
}//GEN-LAST:event_jButton1ActionPerformed

private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
    if(rw.isRewrited()){
        StringBuilder texto = new StringBuilder("RELATÓRIO DE REESCRITAS\n\n");
        Vector transformationList = (Vector)rw.getTransformationList();
        
        for (Object object : transformationList) {
            Transformation t = (Transformation)object;
            texto.append(t.toString() + "\n\n");
        }
        textAreaRelatorio.setText(texto.toString());
        Dimension paneSize = relatorio.getSize();
        Dimension screenSize = relatorio.getToolkit().getScreenSize();
        relatorio.setLocation( (screenSize.width - paneSize.width) / 2, (screenSize.height - paneSize.height) / 2);
        relatorio.setVisible(true);
    }
}//GEN-LAST:event_jButton2ActionPerformed

